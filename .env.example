# ============================================
# AuthMCP Gateway Configuration
# ============================================

# Gateway Public URL
MCP_PUBLIC_URL=http://localhost:8000

# Authentication
AUTH_REQUIRED=true

# ============================================
# JWT Configuration
# ============================================
JWT_ALGORITHM=HS256
JWT_SECRET_KEY=change-me-to-a-secure-random-string-min-32-chars
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# For RS256 (uncomment if using):
# JWT_ALGORITHM=RS256
# JWT_PRIVATE_KEY_PATH=/app/keys/jwt_private.pem
# JWT_PUBLIC_KEY_PATH=/app/keys/jwt_public.pem

# ============================================
# Database
# ============================================
AUTH_SQLITE_PATH=data/auth.db

# ============================================
# User Management
# ============================================
ALLOW_REGISTRATION=false

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL=true

# ============================================
# Optional: Backward Compatibility
# ============================================
# Static bearer tokens (comma-separated)
# STATIC_BEARER_TOKENS=token1,token2,token3

# Trusted IPs that bypass authentication (comma-separated)
# Note: Use with caution! Only for internal services
# MCP_TRUSTED_IPS=127.0.0.1,::1

# ============================================
# Network
# ============================================
REQUEST_TIMEOUT_SECONDS=60
ALLOW_INSECURE_HTTP=false
DISABLE_DNS_REBINDING=true

# Optional: CORS
# ALLOWED_ORIGINS=https://example.com,https://another.com

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
